<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Toolbar
        android:titleTextColor="#FAFAFAFA"
        android:id="@+id/toolbar"
        android:title="@string/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NewApi,UnusedAttribute" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GoToGamePage"
        android:text="test ke game page"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15sp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:src="@drawable/tictactoe"
            android:layout_width="wrap_content"
            android:layout_height="180sp"
            tools:ignore="ContentDescription" />
        <TextView
            android:textAlignment="center"
            android:text="Silahkan Login dahulu untuk melanjutkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="15sp"
        android:background="@drawable/bg_gradasi"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFF"
            android:text="Masuk"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            tools:ignore="UselessLeaf" />
        <EditText
            android:padding="10sp"
            android:background="@drawable/foem"
            android:drawableStart="@drawable/user"
            android:hint=" Masukkan Username"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:drawableLeft="@drawable/user"
            tools:ignore="Autofill,HardcodedText"
            android:inputType="text" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15sp"
            tools:ignore="UselessLeaf" />
        <EditText
            android:padding="10sp"
            android:background="@drawable/foem"
            android:drawableStart="@drawable/key"
            android:hint=" Masukkan Password"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:drawableLeft="@drawable/key"
            tools:ignore="Autofill,HardcodedText"
            android:inputType="textPassword" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15sp"
            tools:ignore="UselessLeaf" />
        <TextView
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="Lupa password?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15sp"
            tools:ignore="UselessLeaf" />
        <Button
            android:id="@+id/btn_login"
            android:onClick="GoToGamePage"
            android:textStyle="bold"
            android:textColor="#3B4EF3"
            android:background="@drawable/foem"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Login"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15sp"
            tools:ignore="UselessLeaf" />
        <TextView
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="Saya belum punya akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="Daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>